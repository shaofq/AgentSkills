{
  "type": "page",
  "title": "数据仪表盘",
  "body": [
    {
      "type": "grid",
      "columns": [
        {
          "type": "card",
          "header": {
            "title": "总用户数"
          },
          "body": {
            "type": "tpl",
            "tpl": "<div style='font-size: 32px; font-weight: bold; color: #1890ff;'>12,345</div>"
          }
        },
        {
          "type": "card",
          "header": {
            "title": "今日活跃"
          },
          "body": {
            "type": "tpl",
            "tpl": "<div style='font-size: 32px; font-weight: bold; color: #52c41a;'>1,234</div>"
          }
        },
        {
          "type": "card",
          "header": {
            "title": "订单数量"
          },
          "body": {
            "type": "tpl",
            "tpl": "<div style='font-size: 32px; font-weight: bold; color: #faad14;'>567</div>"
          }
        },
        {
          "type": "card",
          "header": {
            "title": "总收入"
          },
          "body": {
            "type": "tpl",
            "tpl": "<div style='font-size: 32px; font-weight: bold; color: #f5222d;'>¥89,012</div>"
          }
        }
      ]
    },
    {
      "type": "grid",
      "columns": [
        {
          "md": 8,
          "body": {
            "type": "card",
            "header": {
              "title": "销售趋势"
            },
            "body": {
              "type": "chart",
              "height": 300,
              "config": {
                "xAxis": {
                  "type": "category",
                  "data": ["1月", "2月", "3月", "4月", "5月", "6月"]
                },
                "yAxis": {
                  "type": "value"
                },
                "series": [
                  {
                    "name": "销售额",
                    "type": "line",
                    "smooth": true,
                    "data": [820, 932, 901, 934, 1290, 1330]
                  }
                ]
              }
            }
          }
        },
        {
          "md": 4,
          "body": {
            "type": "card",
            "header": {
              "title": "用户分布"
            },
            "body": {
              "type": "chart",
              "height": 300,
              "config": {
                "series": [
                  {
                    "type": "pie",
                    "radius": ["40%", "70%"],
                    "data": [
                      {"value": 1048, "name": "华东"},
                      {"value": 735, "name": "华北"},
                      {"value": 580, "name": "华南"},
                      {"value": 484, "name": "西部"}
                    ]
                  }
                ]
              }
            }
          }
        }
      ]
    },
    {
      "type": "card",
      "header": {
        "title": "最近订单"
      },
      "body": {
        "type": "crud",
        "api": "/api/orders",
        "syncLocation": false,
        "columns": [
          {"name": "orderId", "label": "订单号"},
          {"name": "customer", "label": "客户"},
          {"name": "amount", "label": "金额"},
          {"name": "status", "label": "状态", "type": "mapping", "map": {
            "pending": "待处理",
            "completed": "已完成",
            "cancelled": "已取消"
          }},
          {"name": "createdAt", "label": "时间", "type": "date"}
        ],
        "footerToolbar": ["pagination"]
      }
    }
  ]
}
