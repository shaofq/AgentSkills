{
  "type": "page",
  "title": "向导式表单",
  "body": {
    "type": "wizard",
    "api": "/api/submit",
    "steps": [
      {
        "title": "基本信息",
        "body": [
          {
            "type": "input-text",
            "name": "username",
            "label": "用户名",
            "required": true
          },
          {
            "type": "input-text",
            "name": "email",
            "label": "邮箱",
            "required": true,
            "validations": {
              "isEmail": true
            }
          },
          {
            "type": "input-text",
            "name": "phone",
            "label": "手机号"
          }
        ]
      },
      {
        "title": "详细信息",
        "body": [
          {
            "type": "select",
            "name": "industry",
            "label": "行业",
            "options": [
              {"label": "互联网", "value": "internet"},
              {"label": "金融", "value": "finance"},
              {"label": "教育", "value": "education"},
              {"label": "医疗", "value": "medical"},
              {"label": "其他", "value": "other"}
            ]
          },
          {
            "type": "input-number",
            "name": "companySize",
            "label": "公司规模"
          },
          {
            "type": "textarea",
            "name": "description",
            "label": "公司简介",
            "rows": 4
          }
        ]
      },
      {
        "title": "确认提交",
        "body": [
          {
            "type": "static",
            "name": "username",
            "label": "用户名"
          },
          {
            "type": "static",
            "name": "email",
            "label": "邮箱"
          },
          {
            "type": "static",
            "name": "phone",
            "label": "手机号"
          },
          {
            "type": "static",
            "name": "industry",
            "label": "行业"
          },
          {
            "type": "static",
            "name": "companySize",
            "label": "公司规模"
          },
          {
            "type": "static",
            "name": "description",
            "label": "公司简介"
          },
          {
            "type": "checkbox",
            "name": "agree",
            "label": "我已阅读并同意服务条款",
            "required": true
          }
        ]
      }
    ]
  }
}
